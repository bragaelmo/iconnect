<div id="mytask-layout" class="theme-indigo">

    <!-- main body area -->
    <div class="main p-2 py-3 p-xl-5 ">
        
        <!-- Body: Body -->
        <div class="body d-flex p-0 p-xl-5">
            <div class="container-xxl">

                <div class="row g-0">
                    <div class="col-lg-6 d-none d-lg-flex justify-content-center align-items-center rounded-lg auth-h100">
                        <div style="max-width: 25rem;">
                            <div class="text-center mb-5">
                                <img src="/images/icone.gif" width="100">
                            </div>
                            <div class="mb-5">
                                <h2 class="color-900 text-center" style="color: #ffffff;">Sistema de Atendimento</h2>
                            </div>
                            <!-- Image block -->
                            <div class="">
                                <img src="/images/atendimento-login.png" alt="login-img" width="350">
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 d-flex justify-content-center align-items-center border-0 rounded-lg auth-h100">
                        <div class="w-100 p-3 p-md-5 card border-0 bg-dark text-light" style="max-width: 32rem;">
                            <!-- Form -->
                            <form class="row g-1 p-3 p-md-3" action="/login" method="POST">
                                <div class="col-12 text-center mb-1 mb-lg-5">
                                    <img src="/images/logo-login.png" width="200">
                                    <h3 class="text-muted">Login</h3>
                                </div>
                                <!-- <div class="col-12 text-center mb-4">
                                    <a class="btn btn-lg btn-outline-secondary btn-block" href="#">
                                        <span class="d-flex justify-content-center align-items-center">
                                            <img class="avatar xs me-2" src="assets/images/google.svg" alt="Image Description">
                                            Sign in with Google
                                        </span>
                                    </a>
                                    <span class="dividers text-muted mt-4">OR</span>
                                </div> -->
                                <div class="col-12">
                                    <div class="mb-2">
                                        <label class="form-label"></label>
                                        <input name="email" type="email" class="form-control form-control-lg" placeholder="nome@exemplo.com" value="{{email}}">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="mb-2">
                                        
                                        <input name="password" type="password" class="form-control form-control-lg" placeholder="***************">
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-check">
                                        
                                        <div class="form-label">
                                            <span class="d-flex justify-content-between align-items-center">
                                               
                                                <span  style="color: #000000">Esqueceu a senha?
                                                    <a class="" href="auth-password-reset.html"  style="color: #ffffff;">Clique aqui</a>
                                                </span>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 text-center mt-4">
                                    <button type="submit" class="btn btn-lg btn-block btn-light lift text-uppercase" atl="signin">Entrar</button>
                                </div>
                                
                            </form>
                            <!-- End Form -->
                        </div>
                    </div>
                </div> <!-- End Row -->
            </div>
        </div>
    </div>
</div>